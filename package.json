{
  "name": "are-you-getting-off-work",
  "displayName": "Are You Getting Off Work",
  "description": "Are you getting off work ?",
  "version": "0.0.4",
  "publisher": "yxlazy",
  "homepage": "https://marketplace.visualstudio.com/items?itemName=yxlazy.are-you-getting-off-work",
  "repository": {
    "type": "git",
    "url": "https://github.com/yxlazy/are-you-getting-off-work"
  },
  "keywords": [
    "countdown",
    "entertainment",
    "game"
  ],
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Are You Getting Off Work",
      "properties": {
        "go-off-work.showNotification": {
          "type": "boolean",
          "default": true,
          "description": "Whether to open the off duty reminder notice",
          "order": 0
        },
        "go-off-work.shutdown": {
          "type": "boolean",
          "default": false,
          "description": "Whether to shut down when off duty time arrives（Windows system only）",
          "order": 0
        },
        "go-off-work.showOffWorkContent": {
          "type": "string",
          "default": "你摸鱼我摸鱼，老板宝马变青桔",
          "description": "The content displayed in the notification, provided that showNotification is selected",
          "order": 0
        },
        "go-off-work.showContentAtStatusBar": {
          "type": "string",
          "default": "下班了",
          "description": "What is displayed in the status bar after the off duty time",
          "order": 0
        },
        "go-off-work.shutdownDelay": {
          "type": "string",
          "default": "10",
          "description": "Shutdown delay time (valid only after shutdown is selected)",
          "order": 0,
          "enum": ["5", "10", "20", "30", "40", "50", "60", "90", "120", "180"]
        },
        "go-off-work.hour": {
          "type": "string",
